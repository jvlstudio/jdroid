<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
	android:layout_height="wrap_content" android:background="@android:color/white">

	<ImageView android:id="@+id/icon" android:src="@drawable/ic_facebook_launcher" android:layout_width="wrap_content"
		android:layout_height="wrap_content" android:padding="2dp" android:layout_marginRight="5dp"
		android:layout_alignParentLeft="true" android:layout_centerVertical="true" />

	<TextView android:id="@+id/name" android:text="@string/appName" android:layout_width="match_parent"
		android:layout_height="wrap_content" android:layout_toRightOf="@id/icon" android:textSize="15sp" android:padding="2dp"
		android:layout_centerVertical="true" android:textColor="@android:color/black" />

</RelativeLayout>