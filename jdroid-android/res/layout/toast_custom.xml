<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
	android:layout_height="match_parent" android:orientation="horizontal" android:background="@drawable/toast_frame"
	android:gravity="center_vertical">

	<ImageView android:id="@+id/toastImage" android:layout_width="wrap_content" android:layout_height="wrap_content"
		android:layout_marginRight="10dp" android:visibility="gone" />

	<TextView android:id="@+id/toastMessage" android:layout_width="0dp" android:layout_height="wrap_content"
		android:layout_weight="1" android:textSize="14sp" android:textStyle="normal" android:textColor="@android:color/white"
		android:shadowColor="#BB000000" android:shadowRadius="2.75" />

</LinearLayout>